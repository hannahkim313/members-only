<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <h1>Members Only</h1>
    <% if (user) { %>
    <h2>
      Welcome back,
      <%= user.first_name %>!
    </h2>
    <a href="/auth/logout">Log out</a>
    <!-- TODO: display messages with full details -->
    <!-- TODO: display links to change membership status -->
    <!-- TODO: display links to message routes based on membership status -->
    <% } else { %>
    <h2>Welcome anonymous visitor!</h2>
    <a href="/auth/sign-up">Sign up</a>
    <a href="/auth/login">Login</a>
    <h3>Messages</h3>
    <% messages.forEach((message) => { %>
    <article>
      <h4><%= message.title %></h4>
      <p><%= message.message %></p>
    </article>
    <% }) %>
    <% } %>
  </body>
</html>
