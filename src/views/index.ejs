<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <h1>Members Only</h1>
    <% if (user) { %>
    <h2>
      Welcome back,
      <%= user.first_name %>!
    </h2>
    <!-- TODO: display links to message routes based on membership status -->
    <% if (user.membership_status !== 'guest') { %>
    <a href="/messages/create">Create a message</a>
    <% } %>
    <a href="/member/membership">Change membership</a>
    <a href="/auth/logout">Log out</a>
    <h3>Account Details</h3>
    <p>First name: <%= user.first_name %></p>
    <p>Last name: <%= user.last_name %></p>
    <p>Username: <%= user.username %></p>
    <p>Membership status: <%= user.membership_status %></p>
    <h3>Messages</h3>
    <% messages.forEach((message, index) => { %>
    <article>
      <h4>Title</h4>
      <p><%= message.title %></p>
      <h4>Message</h4>
      <p><%= message.message %></p>
      <h4>Author</h4>
      <p><%= message.full_name %></p>
      <h4>Date Posted</h4>
      <p><%= message.timestamp %></p>
    </article>
    <% if (index < messages.length - 1) { %>
    <hr />
    <% } %>
    <% }) %>
    <% } else { %>
    <h2>Welcome anonymous visitor!</h2>
    <a href="/auth/sign-up">Sign up</a>
    <a href="/auth/login">Login</a>
    <h3>Messages</h3>
    <% messages.forEach((message) => { %>
    <article>
      <h4><%= message.title %></h4>
      <p><%= message.message %></p>
    </article>
    <% }) %>
    <% } %>
  </body>
</html>
